{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Apple Device",
    "description": "Description of an Apple device",

    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name":           {"type": "string"},
        "identifier":     {
            "anyOf": [
                {"type": "string"},
                {"type": "array", "items": {"type": "string"}}
            ]
        },
        "alias":          {"type": "array", "items": {"type": "string"}},
        "key":            {"type": "string"},
        "appLink":            {"type": "string"},
        "soc": {
            "anyOf": [
                {"type": "string"},
                {"type": "array", "items": {"type": "string"}}
            ]
        },
        "cpid": {
            "anyOf": [
                {"$ref": "#/definitions/hex"},
                {"type": "array", "items": {"$ref": "#/definitions/hex"}}
            ]
        },
        "arch":           {"type": "string"},
        "type":           {"type": "string"},
        "board": {
            "anyOf": [
                {"type": "string"},
                {"type": "array", "items": {"type": "string"}}
            ]
        },
        "bdid":           {"$ref": "#/definitions/hex"},
        "iBridge":        {"type": "string"},
        "model": {
            "anyOf": [
                {"type": "string"},
                {"type": "array", "items": {"type": "string"}}
            ]
        },
        "internal":       {"type": "boolean"},
        "group":          {"type": "boolean"},
        "released": {
            "anyOf": [
                {"$ref": "#/definitions/partial-date"},
                {"type": "array", "items": {"$ref": "#/definitions/partial-date"}}
            ]
        },
        "discontinued":   {"type": "string", "format": "date"},
        "info":           {"type": "array", "items": {"type": "object"}},
        "colors":         {"type": "array", "items": {}},
        "windowsStoreId": {"type": "string"},
        "extra":          {"type": "object"}
    },
    "definitions": {
        "hex": {
            "type": "string",
            "pattern": "^0x[0-9a-fA-F]+$"
        },
        "color-hex": {
            "type": "string",
            "pattern": "^[0-9a-fA-F](6)$"
        },
        "partial-date": {
            "anyOf": [
                {"type": "string", "format": "date-time"},
                {"type": "string", "format": "date"},
                {"type": "string", "pattern": "^\\d{4}-\\d{2}$"},
                {"type": "string", "pattern": "^\\d{4}$"},
                {"type": "string", "maxLength": 0}
            ]
        },
        "color": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {"type": "string"},
                "hex": {"$ref": "#/definitions/hex"},
                "released": {"$ref": "#/definitions/partial-date"}
            },
            "required": ["name", "hex"]
        }
    }
}
